
<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
            <% if(action == 'add') { %>

            <div class="card">
                <div class="card-header">Staff profile</div>
                <div class="card-body">
                    <form method="POST" action="/a_prof/add_a_prof">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Reg. No.</label>
                                    <input type="text" name="regid" id="regid" class="form-control" />
                                </div>
                            </div>
                        </div>
                        
                        
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Staff Name</label>
                                    <input type="text" name="nme" id="nme" class="form-control" />
                                </div>
                            </div>
                        </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Gender</label>
                                    <select name="gen" class="form-control">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Qualification</label>
                                        <input type="text" name="qual" id="qual" class="form-control" />
                                    </div>
                                </div>
                            </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Pan id</label>
                                            <input type="text" name="panid" id="panid" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Experience</label>
                                            <input type="text" name="exp" id="exp" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Email</label>
                                            <input type="email" name="email" id="email" class="form-control" />
                                        </div>
                                    </div>
                                </div>



                        
                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                        </div>
                    </form>
                </div>
            </div>

            <% } else if(action == 'edit') { %>
            <div class="card">
                <div class="card-header">Staff profile</div>
                <div class="card-body">
                    <form method="POST" action="/a_prof/edit/<%= sampleData.id %>">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Reg. No.</label>
                                    <input type="text" name="regid" id="regid" class="form-control" value="<%= sampleData.regid %>" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Staff Name</label>
                                    <input type="text" name="nme" id="nme" class="form-control" value="<%= sampleData.nme %>" />
                                </div>
                            </div>
                        </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Gender</label>
                                    <select name="gen" class="form-control">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Qualification</label>
                                            <input type="text" name="qual" id="qual" class="form-control" value="<%= sampleData.qual %>" />
                                        </div>
                                    </div>
                                </div>
    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label>Pan id</label>
                                                <input type="text" name="panid" id="panid" class="form-control" value="<%= sampleData.panid %>"/>
                                            </div>
                                        </div>
                                    </div>
    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label>Experience</label>
                                                <input type="text" name="exp" id="exp" class="form-control" value="<%= sampleData.exp %>"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label>Email</label>
                                                <input type="email" name="email" id="email" class="form-control" value="<%= sampleData.email %>"/>
                                            </div>
                                        </div>
                                    </div>
    
    
    
                            


                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                        </div>
                    </form>
                    <script>
                    document.getElementById('gen').value="<%= sampleData.gen %>";
                    </script>
                </div>
            </div>
            <% } else { %>
                <% if(message.length > 0) { %>
                <div class="alert alert-success">
                    <%= message %>
                </div>
                <% } %>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Staff profile</div>
                        <div class="col">
                            <a href="/a_prof/add" class="btn btn-success btn-sm float-end">Add</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Reg.No.</th>
                                
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Qualification</th>
                                <th>Pan id</th>
                                <th>Experience</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.regid %></td>
                                
                                <td><%= data.nme %></td>
                                <td><%= data.gen %></td>
                                <td><%= data.qual %></td>
                                <td><%= data.panid %></td>
                                <td><%= data.exp %></td>
                                <td><%= data.email %></td>
                                
                                <td>
                                    <a href="/a_prof/edit/<%= data.id %>" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/a_prof/delete/<%= data.id %>" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>